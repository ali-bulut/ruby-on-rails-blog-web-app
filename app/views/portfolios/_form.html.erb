<%= form_with(model: portfolio_item, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="btn btn-primary">
          Upload a main image file
        <%= form.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a thumb image file
          <%= form.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>

      </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", rows:13 %>
      </div>
    </div>
    </div>

  <hr>
  <h2>Technologies Used:</h2>

  <div>
    <%= form.fields_for :techologies do |techology_form| %>
      <%= render 'portfolios/techology_fields', f: techology_form %>
    <% end %>
    <div>
      <%# special keyword that is coming from cocoon gem. Whenever we press this Add Techology field it will
      create a new technology inside of a model so up here will map this.%>
      <%= link_to_add_association 'Add Technology', form, :techologies %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
